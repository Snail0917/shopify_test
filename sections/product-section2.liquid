<script>
  var i = 0;
  function step() {
    const myInterval = setInterval(myTimer, 35);
    function myTimer() {
        if(i<101) {
			$('.hover_state ul li.state3 div').css('width', '0%');
            $('.hover_state ul li.state2 div').css('width', '0%');
            $('.hover_state ul li.state1 div').css('width', i+'%');
          	$('.AspectRatio.img2').css('display', 'none');
			$('.AspectRatio.img3').css('display', 'none');
			$('.AspectRatio.img1').css('display', 'block');
            $('.img_btn h2').removeClass('hover');
            $('.img_btn h5').removeClass('hover');
            $('.img_but1 h2').addClass('hover');
            $('.img_but1 h5').addClass('hover');
            
        }
        if(i>100) {
			$('.hover_state ul li.state1 div').css('width', '0%');
            $('.hover_state ul li.state3 div').css('width', '0%');
            $('.hover_state ul li.state2 div').css('width', i-100+'%');
            $('.AspectRatio.img1').css('display', 'none');
			$('.AspectRatio.img3').css('display', 'none');
			$('.AspectRatio.img2').css('display', 'block');
            $('.img_btn h2').removeClass('hover');
            $('.img_btn h5').removeClass('hover');
            $('.img_but2 h2').addClass('hover');
            $('.img_but2 h5').addClass('hover');
        }
        if(i>200) {
            $('.hover_state ul li.state1 div').css('width', '0%');
            $('.hover_state ul li.state2 div').css('width', '0%');
            $('.hover_state ul li.state3 div').css('width', i-200+'%');
            $('.AspectRatio.img1').css('display', 'none');
			$('.AspectRatio.img2').css('display', 'none');
			$('.AspectRatio.img3').css('display', 'block');
            $('.img_btn h2').removeClass('hover');
            $('.img_btn h5').removeClass('hover');
            $('.img_but3 h2').addClass('hover');
            $('.img_but3 h5').addClass('hover');
        }
        i = i+1;
        if(i>300) {
            i=0;
        }
    }
  }
  
  $(document).ready(function(){
    const myTimeout = setTimeout(step, 300);
    $('.img_but1 h2').click(function(){
        clearTimeout(myTimeout);
        i = 0;
    });
    $('.img_but2 h2').click(function(){
        clearTimeout(myTimeout);
        i = 101;
    }); 
    $('.img_but3 h2').click(function(){
        clearTimeout(myTimeout);
        i = 201;
    });
    $('.hover_state ul li.state1').click(function(){
        clearTimeout(myTimeout);
        i = 0;
    });
    $('.hover_state ul li.state2').click(function(){
        clearTimeout(myTimeout);
        i = 101;
    }); 
    $('.hover_state ul li.state3').click(function(){
        clearTimeout(myTimeout);
        i = 201;
    });
    
  });
  
  
</script>