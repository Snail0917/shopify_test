    const myInterval1 = setInterval(myTimeout1, 300);
    function myTimeout1() {
      if ($('div.kiwi-sizing-modal .ks-modal-tab-wrapper .ks-modal-tab').length >= 1) {
        $('div.kiwi-sizing-modal .ks-modal-tab-wrapper .ks-modal-tab').removeClass('selected');
        $('div.kiwi-sizing-modal .ks-modal-tab-wrapper .ks-modal-tab:nth-child(1)').addClass('selected');
        
