</script>  

<script>
  $(document).ready(function(){
    var recent_path = $(location).attr("href");
    if (recent_path.includes('/pages/size-guide-popup')) {
      const myInterval = setInterval(myTimer, 300);
      function myTimer() {
        var but_visible = $('span.ks-calculator-modal-link.sizing-calculator-modal-link.with-icon').length;
        if (but_visible>=1) {
          $('span.ks-calculator-modal-link.sizing-calculator-modal-link.with-icon').click();
          const myTimeout = setTimeout(myGreeting, 300);
          clearInterval(myInterval);
        }
      }   
    }

    function myGreeting() {
      $(document).ready(function(){
        $(".choose-size").change(function(){
          $(this).find("option:selected").each(function(){
            var optionValue = $(this).attr("value");
            if(optionValue){
              $(".box").not("." + optionValue).hide();
              $("." + optionValue).show();
            } else{
              $(".box").hide();
            }
          });
        }).change();
      });
    }
  });
</script>