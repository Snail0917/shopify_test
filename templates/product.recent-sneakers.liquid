<script type="text/javascript">
  var _learnq = _learnq || [];

  var item = {
    Name: {{ product.title|json }},
    ProductID: {{ product.id|json }},
    Categories: {{ product.collections|map:'title'|json }},
    ImageURL: "https:{{ product.featured_image.src|img_url:'grande' }}",
    URL: "{{ shop.secure_url }}{{ product.url }}",
    Brand: {{ product.vendor|json }},
    Price: {{ product.price|money|json }},
    CompareAtPrice: {{ product.compare_at_price_max|money|json }}
  };

  _learnq.push(['track', 'Viewed Product', item]);
  _learnq.push(['trackViewedItem', {
    Title: item.Name,
    ItemId: item.ProductID,
    Categories: item.Categories,
    ImageUrl: item.ImageURL,
    Url: item.URL,
    Metadata: {
      Brand: item.Brand,
      Price: item.Price,
      CompareAtPrice: item.CompareAtPrice
    }
  }]);
  
 
  //smart size poput js
  function myTimeout1(){
    if ($(".ks-code select#select-new").length >=1) {
    	var selected_opt = $(".ks-code select#select-new").val();
        $(".ks-code .box").not("." + selected_opt).hide();
        $(".ks-code ." + selected_opt).show(); 
    }
  }
 
  $(document).ready(function(){

    setInterval(myTimeout1, 100);
    
    $('a.sizeguide_popup_btn').click(function() {
       $('span.ks-calculator-modal-link.sizing-calculator-modal-link').click();
    });

    //size guide popup header 
    setInterval(function () {
      var head_check_title = $('.ks-modal-content-wrapper .ks-calculator-header span.hidden_content').text();
      if (head_check_title.includes('Sneaker')) {
        $('.ks-modal-content-wrapper .modal-title-header').text('Sneaker Size Guide');
      }
    }, 300);
  });
  
</script>

